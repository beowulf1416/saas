{
    "$schema": "http://json-schema.org/schema#",
    "$id": "/static/schemas/inventory/item.json",
    "definitions": {
        "uom": {
            "type": "object",
            "properties": {
                "id": { "type": "number" }
            }
        },
        "item": {
            "type": "object",
            "properties": {
                "id": { "type": "string", "format": "uuid" },
                "quantity": { "type": "number" },
                "uom": { "$ref": "#/definitions/uom" }
            }
        }
    },
    "type": "object",
    "properties": {
        "clientId": { "type": "string", "format": "uuid"  },
        "itemId": { "anyOf": [
            { "type": "string", "format": "uuid" },
            { "type": "null" }
        ]},
        "name": { "type": "string" },
        "description": { "type": "string" },
        "sku": { "type": "string" },
        "upc": { "type": "string" },
        "make": { "type": "string" },
        "brand": { "type": "string" },
        "model": { "type": "string" },
        "version": { "type": "string" },
        "length": { "type": "number" },
        "lengthUnitId": { "type": "number" },
        "width": { "type": "number" },
        "widthUnitId": { "type": "number" },
        "height": { "type": "number" },
        "heightUnitId": { "type": "number" },
        "weight": { "type": "number" },
        "weightUnitId": { "type": "number" },
        "perishable": { "type": "boolean" },
        "hazardous": { "type": "boolean" },
        "substitutes": {
            "type": "array",
            "items": { "$ref": "#/definitions/item" }
        },
        "components": {
            "type": "array",
            "items": { "$ref": "#/definitions/item" }
        }
    },
    "required": [
        "clientId",
        "itemId",
        "name",
        "description"
    ],
    "additionalProperties": false
}