{
    "$schema": "http://json-schema.org/schema#",
    "$id": "/static/schemas/work/project.json",
    "definitions": {
        "task": {
            "type": "object",
            "properties": {
                "id": { "type": "string", "format": "uuid" },
                "name": { "type": "string" },
                "description": { "type": "string" },
                "plannedStart": { "type": "string", "format": "date-time" },
                "plannedEnd": { "type": "string", "format": "date-time" },
                "actualStart": { "type": "string", "format": "date-time" },
                "actualEnd": { "type": "string", "format": "date-time" },
                "status": { "anyOf": [
                    { "type": "string", "enum": ["new", "remove"] },
                    { "type": "null" }
                ]},
                "tasks": {
                    "type": "array",
                    "task": { "$ref": "#/definitions/item" }
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "clientId": { "type": "string", "format": "uuid" },
        "projectId": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "plannedStart": { "type": "string", "format": "date-time" },
        "plannedEnd": { "type": "string", "format": "date-time" },
        "actualStart": { "type": "string", "format": "date-time" },
        "actualEnd": { "type": "string", "format": "date-time" },
        "tasks": {
            "type": "array",
            "task": { "$ref": "#/definitions/task" }
        }
    },
    "required": [
        "clientId",
        "projectId",
        "name"
    ],
    "additionalProperties": true
}