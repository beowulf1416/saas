{
    "$schema": "http://json-schema.org/schema#",
    "$id": "/static/schemas/accounting/account_journal.json",
    "definitions": {
        "entry": {
            "type": "object",
            "properties": {
                "accountId": { "type": "string", "format": "uuid" },
                "debit": { "type": "number" },
                "credit": { "type": "number" }
            }
        },
        "file": {
            "type": "object",
            "properties": {
                "id": { "type": "string", "format": "uuid" },
                "filename": { "type": "string" },
                "type": { "type": "string" },
                "size": { "type": "number" }
            }
        }
    },
    "type": "object",
    "properties": {
        "clientId": { "type": "string", "format": "uuid" },
        "journalId": { "type": "string", "format": "uuid" },
        "description": { "type": "string" },
        "currencyId": { "type": "number" },
        "entries": {
            "type": "array",
            "entry": { "$ref": "#/defintions/entry" }
        },
        "files": {
            "type": "array",
            "file": { "$ref": "#/definitions/file" }
        }
    },
    "required": [
        "clientId",
        "journalId",
        "description",
        "entries"
    ],
    "additionalProperties": false
}